CREATE TABLE ISSUESLISTS
(
  ID SERIAL PRIMARY KEY,
  NAME VARCHAR(1024) NOT NULL
);

INSERT INTO ISSUESLISTS (NAME)
VALUES ("ToDo");

INSERT INTO ISSUESLISTS (NAME)
VALUES ("In progress");

INSERT INTO ISSUESLISTS (NAME)
VALUES ("Done");

commit;

CREATE TABLE ISSUESS
(
    ID               SERIAL PRIMARY KEY,
    ISSUESLIST_ID  BIGINT UNSIGNED NOT NULL,
    FOREIGN KEY (ISSUESLIST_ID) REFERENCES ISSUESLISTS(ID),
    SUMMARY       VARCHAR(1024),
    DESCRIPTION   VARCHAR(1024),
    USER_ID_ASSIGNEDTO  BIGINT UNSIGNED NOT NULL,
    FOREIGN KEY (USER_ID_ASSIGNEDTO) REFERENCES USERS(ID)
);

INSERT INTO ISSUESS (ISSUESLIST_ID,SUMMARY,DESCRIPTION,USER_ID_ASSIGNEDTO)
VALUES (1,"coś tam", "duzo cosiow i costamow",2);

INSERT INTO ISSUESS (ISSUESLIST_ID,SUMMARY,DESCRIPTION,USER_ID_ASSIGNEDTO)
VALUES (2,"coś tam progress", "duzo cosiow i costamow",2);

INSERT INTO ISSUESS (ISSUESLIST_ID,SUMMARY,DESCRIPTION,USER_ID_ASSIGNEDTO)
VALUES (3,"coś tam done", "duzo cosiow i costamow",1);

INSERT INTO ISSUESS (ISSUESLIST_ID,SUMMARY,DESCRIPTION,USER_ID_ASSIGNEDTO)
VALUES (1,"coś tam toDo", "duzo cosiow i costamow",3);

INSERT INTO ISSUESS (ISSUESLIST_ID,SUMMARY,DESCRIPTION,USER_ID_ASSIGNEDTO)
VALUES (3,"coś tam", "duzo cosiow i costamow",3);

commit;

SELECT * FROM ISSUESS;