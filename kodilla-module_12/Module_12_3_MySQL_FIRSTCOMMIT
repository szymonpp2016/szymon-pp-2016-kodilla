CREATE TABLE USERS
(
    ID SERIAL PRIMARY KEY,
    FIRSTNAME   VARCHAR(100),
    LASTNAME    VARCHAR(100)
);

ALTER TABLE USERS AUTO_INCREMENT = 1;

INSERT INTO USERS (FIRSTNAME, LASTNAME)
VALUES ("Zachary", "Lee");

INSERT INTO USERS (FIRSTNAME, LASTNAME)
VALUES ("Stephanie", "Kovalsky");

INSERT INTO USERS (FIRSTNAME, LASTNAME)
VALUES ("Thomas", "Landgren");


COMMIT;

CREATE TABLE ISSUESLISTS
(
  ID SERIAL PRIMARY KEY,
  NAME VARCHAR(128) NOT NULL
); ALTER TABLE ISSUESLISTS AUTO_INCREMENT = 1;

INSERT INTO ISSUESLISTS (NAME)
VALUES ("ToDo");

INSERT INTO ISSUESLISTS (NAME)
VALUES ("In progress");

INSERT INTO ISSUESLISTS (NAME)
VALUES ("Done");

commit;

SELECT * FROM ISSUESLISTS;


CREATE TABLE ISSUESS
(
    ID               SERIAL PRIMARY KEY ,
    ISSUESLIST_ID  BIGINT UNSIGNED NOT NULL,
    FOREIGN KEY (ISSUESLIST_ID) REFERENCES ISSUESLISTS(ID),
    SUMMARY       VARCHAR(64),
    DESCRIPTION   VARCHAR(128),
    USER_ID_ASSIGNEDTOissueslists  BIGINT UNSIGNED NOT NULL,
    FOREIGN KEY (USER_ID_ASSIGNEDTO) REFERENCES USERS(ID)
); ALTER TABLE ISSUESS AUTO_INCREMENT = 1;

INSERT INTO ISSUESS (ISSUESLIST_ID,SUMMARY,DESCRIPTION,USER_ID_ASSIGNEDTO)
